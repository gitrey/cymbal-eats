{
  "cloudbuild": {
    "name": "gcr.io/google.com/cloudsdktool/cloud-sdk:slim",
      "args": ["gcloud", "beta", "builds", "triggers", "create", "github",
               "--name=${_APP_NAME}-trigger",
               "--repo-name=cymbal-eats",
               "--repo-owner=gitrey",
               "--branch-pattern=main",
               "--included-files=inventory-service/spanner/**",
               "--build-config=./inventory-service/spanner/cloudbuild.yaml",
               "--substitutions=_APP_NAME=${_APP_NAME},_REGION=${_REGION},_SPANNER_INSTANCE_NAME=${_SPANNER_INSTANCE_NAME}"
              ]
  },
  "params": [
    {
      "param": "_APP_NAME",
      "label": "Application Name",
      "description": "Application that will be deployed.",
      "type": "string",
      "required": true
    },
    {
      "param": "_REGION",
      "label": "Application Region",
      "description": "Where do you want to deploy the application?",
      "type": "string",
      "required": true
    },
    {
      "param": "_SPANNER_INSTANCE_NAME",
      "label": "Spanner Instance Name",
      "description": "Spanner Instance Name",
      "type": "string",
      "required": true
    },
    {
      "param": "_TARGET_GIT_REPO",
      "label": "Target GitHub Repo",
      "description": "Target Git Repo",
      "type": "string",
      "required": true
    }
  ],
  "roles": [
    "roles/run.invoker"
  ],
  "apis": [
    "run.googleapis.com",
    "artifactregistry.googleapis.com"
  ]
}
